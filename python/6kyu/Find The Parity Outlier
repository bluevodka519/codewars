def find_outlier(integers):
    i =0
    while i<(len(integers)-1):
        if integers[i]%2 != integers[0]%2:
            if integers[i+1]%2 == integers[i]%2:
                return integers[0]
                break
            elif integers[i+1]%2 == integers[0]%2:
                return integers[i]
                break
        else:
            i +=1
    return integers[i]
